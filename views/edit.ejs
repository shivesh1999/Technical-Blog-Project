    <!-- Personal stylesheet  -->
    <link href="/assets/mine.css" rel="stylesheet" type="text/css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">Tech Chatter</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav justify-content-end">
                <li class="nav-item active">
                    <a class="nav-link" href="/feeds"> feeds </a>
                </li>    
                <li class="nav-item active">
                    <a class="nav-link" href="/logout"> Logout </a>
                </li>
                <li>
                  <a href=""></a>
                </li>
              </ul>
            </div>
        </nav>
    </header>
    <br>
      <div class="container p-2 my-3 bg-dark text-white">
      <h4 >Edit your post here.</h4><br>
      </div>
      <div class="container p-3 my-3 bg-light text-black"> 
      <h5><%= post.topic %></h5>
      <br>
      <form action="/profile/<%= post._id %>/edit?_method=PUT" method="POST">
      <input type="text" name="content" value="<%=post.content%>"><br><br>
      <button type="submit" class="btn btn-success" >Edit</button>
      </form>
      </div>
    <footer>
    </footer>
</body>
